rules:
  - name: "使用 main 作为默认分支"
    pattern: "git init"
    message: "请记得将默认分支设置为 main"
    suggestion: |
      # 初始化仓库后，请执行以下命令确保使用 main 分支：
      git init
      git branch -M main
      
  - name: "检查当前分支是否为 main"
    pattern: "git push"
    message: "推送前请确保使用 main 分支"
    suggestion: |
      # 检查当前分支
      git branch
      
      # 如果不是 main 分支，请执行：
      git branch -M main
      
      # 然后再推送
      git push -u origin main

  - name: "创建新分支时基于 main"
    pattern: "git checkout -b"
    message: "创建新分支时请基于 main 分支"
    suggestion: |
      # 确保先切换到 main 分支
      git checkout main
      git pull origin main
      
      # 然后创建新分支
      git checkout -b feature/your-branch-name 